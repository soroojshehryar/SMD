<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Screen6">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/backarrow"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_search_24"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/black"
        android:id="@+id/black"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/red"
        android:id="@+id/red"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/black"
        android:layout_marginLeft="-12dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:id="@+id/blue"
        android:src="@drawable/blue"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/red"
        android:layout_marginLeft="-12dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/darkblue"
        android:layout_marginTop="30dp"
        android:id="@+id/darkblue"
        app:layout_constraintLeft_toRightOf="@id/blue"
        android:layout_marginLeft="-12dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/lightblue"
        android:layout_marginTop="30dp"
        android:id="@+id/lightblue"
        app:layout_constraintLeft_toRightOf="@id/darkblue"
        android:layout_marginLeft="-13dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/green"
        android:id="@+id/green"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/lightblue"
        android:layout_marginLeft="-12.5dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/orange"
        android:id="@+id/orange"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/green"
        android:layout_marginLeft="-12dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/purple"
        android:id="@+id/purple"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/orange"
        android:layout_marginLeft="-12dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/pink"
        android:id="@+id/pink"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/purple"
        android:layout_marginLeft="-12dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/gray"
        android:id="@+id/gray"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/pink"
        android:layout_marginLeft="-12dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:src="@drawable/brown"
        android:id="@+id/brown"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/gray"
        android:layout_marginLeft="-12dp"
        app:layout_constraintTop_toBottomOf="@id/backarrow" />



</androidx.constraintlayout.widget.ConstraintLayout>