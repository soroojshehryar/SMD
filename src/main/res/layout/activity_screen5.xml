<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9DCD1"
    android:padding="50dp"
    tools:context=".Screen5">

    <ImageView
        android:layout_width="286dp"
        android:layout_height="169dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="-8dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/speechDraw"
        android:background="@drawable/red_rectangle"
        android:text="Speech Draw"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/drawingPad"
        android:background="@drawable/red_rectangle"
        android:text="Drawing Pad"
        app:layout_constraintTop_toBottomOf="@id/speechDraw" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/autoComplete"
        android:background="@drawable/red_rectangle"
        android:text="Auto Complete"
        app:layout_constraintTop_toBottomOf="@id/drawingPad" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:id="@+id/settings"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/autoComplete" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:src="@drawable/questionmark"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="120dp"
        app:layout_constraintTop_toBottomOf="@id/autoComplete" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:src="@drawable/about"
        android:id="@+id/about"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="220dp"
        app:layout_constraintTop_toBottomOf="@id/autoComplete" />

</androidx.constraintlayout.widget.ConstraintLayout>
